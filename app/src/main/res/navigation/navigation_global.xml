<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_global"
    app:startDestination="@id/categoryFragment" >
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.feature_category.CategoryFragment"
        android:label="CategoryFragment" >
        <action
            android:id="@id/action_categoryFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/navigation_global"/>
    </fragment>
    <dialog
        android:id="@+id/dishFragment"
        android:name="com.example.feature_dish.dish.DishFragment"
        android:label="DishFragment" />
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.feature_dish.menu.MenuFragment"
        android:label="MenuFragment">
        <action
            android:id="@id/action_menuFragment_to_dishFragment"
            app:destination="@id/dishFragment"
            app:popUpTo="@id/menuFragment"/>
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.feature_dish.order.OrderFragment"
        android:label="OrderFragment" />
</navigation>